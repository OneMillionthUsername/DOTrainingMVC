@model int
@{
	ViewData["Title"] = "Frage " + Model;
}
<h2>
Produktliste (Name) und Preis von allen Produkten
die zw. 15 und 20 (inkl.) kosten
</h2>
@using (Html.BeginForm("ValidateAnswers", "QuestionProgress", FormMethod.Get,new { onsubmit = "return validateForm(['where','>=','AND','<='])", autocomplete = "off" }))
{
<div class="form-group">
<div id="solutionText">
<span> select  [ProductName]  ,  [UnitPrice]  from  [dbo]  .  [Products] </span><br />
<!--where-->
<input type="text" name="param0" id="param0" />
<span> UnitPrice </span>
<!--&gt=-->
<input type="text" name="param1" id="param1" />
<span> 15 </span>
<!--and-->
<input type="text" name="param2" id="param2" />
<span> UnitPrice </span>
<!--&lt=-->
<input type="text" name="param3" id="param3" />
<span> 20 </span><br />
</div>
<input type="hidden" name="solutionString" id ="solutionString"/>
<input type="submit" class="btn-sm btn-primary" value="Check"/>
</div>
}