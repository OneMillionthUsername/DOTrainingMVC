@model int
@{
	ViewData["Title"] = "Frage " + Model;
}
<h2>
Produktliste (Name) und Preis von allen Produkten
die zw. 15 und 20 (inkl.) kosten
</h2>
@using (Html.BeginForm("ValidateAnswers", "QuestionProgress", FormMethod.Get,new { onsubmit = "return validateForm(['where','BETWEEN'])", autocomplete = "off" }))
{
<div class="form-group">
<div id="solutionText">
<span> select  [ProductName]  ,  [UnitPrice]  from  [dbo]  .  [Products] </span><br />
<!--where-->
<input type="text" name="param0" id="param0" class="my-1"/>
<span> UnitPrice </span>
<!--between-->
<input type="text" name="param1" id="param1" class="my-1"/>
<span> 15  AND  20 </span><br />
</div>
<input type="hidden" name="solutionString" id ="solutionString"/>
<input type="submit" class="btn btn-primary my-2" value="Check"/>
</div>
}